<div class='bg-white rounded shadow-sm p-3 details'>

  <div class='small-title'>LINKS</div>
  <% if @business.website %>
    <div class='py-2'>
      <div class='row'>
        <div class='col-2'>
          <%= image_tag '/images/website.png' %>
        </div>
        <div class='col-10 text-truncate'>
          <%= link_to @business.website, target: :blank do %>
            <%= @business.website.gsub('https://', '') %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
